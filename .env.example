# 履约驱动酒店管理系统 - 环境配置示例

# 应用配置
NODE_ENV=development
PORT=3000
HMR_PORT=3001

# 数据库配置
DATABASE_URL=postgresql://saas_user:saas_password@localhost:5433/saas_db
REDIS_URL=redis://localhost:6380

# CouchDB配置 (数据同步)
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=password

# 认证配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# 外部服务配置
# 支付网关
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# 邮件服务
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 短信服务
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token

# 文件存储
AWS_REGION=us-east-1
AWS_S3_BUCKET=hotel-management-files
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# 监控和日志
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# 开发工具配置
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=履约驱动酒店管理系统
VITE_APP_VERSION=1.1.0

# Claude Code配置
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_ORGANIZATION=your-organization

# 特性开关
ENABLE_OFFLINE_MODE=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DETAILED_LOGGING=false

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
DATABASE_POOL_SIZE=20

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000